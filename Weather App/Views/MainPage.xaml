        <StackPanel Grid.Row="1" Orientation="Horizontal" >
            <StackPanel Background="ForestGreen">
                <TextBlock x:Name="TempText" />
            </StackPanel>
            <StackPanel Background="Cyan">
                <TextBlock x:Name="TempText1" HorizontalAlignment="Right" />
